('Base64App)

(CommandLine, StdIn, (StdOut O StdErr))

('' & "")
(StdIn & (B64):PlaintextWord)
StdOut -> ((B64):EncodedWord O "")

('' & "-d")
(StdIn & (B64):EncodedWord)
StdOut -> ((B64):PlaintextWord O "-d")

(StdIn & ~(B64):EncodedWord)
StdOut -> (~(B64):EncodedWord O "-d")
StdErr -> ( ~(B64):EncodedWord O "-d" O "Error - input is not a base64-encoded string.")

('' & (~"" & ~"-d"))
StdOut -> (<0 O (~"" & ~"-d"))
StdErr -> ((~"" & ~"-d") O "Error - unknown command given to program.")


